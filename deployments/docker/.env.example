# Environment Configuration for Docker Compose
# Copy this file to .env and customize as needed:
# cp .env.example .env

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000

# CORS Configuration
CORS_ORIGINS=*

# Session Configuration
SESSION_EXPIRATION_SECONDS=3600

# Pagination Configuration
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Development Settings
ALLOW_ALL_API_KEYS=true

# API Key Configuration
# When ALLOW_ALL_API_KEYS=false, only these keys will be accepted
VALID_API_KEYS=demo-key-123,test-key-456,dev-key-789

# PostgreSQL Database Configuration
DB_USER=eduai
DB_PASSWORD=changeme
DB_NAME=eduai_db
DB_PORT=5432

# Database Pool Settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Custom Database URL (overrides DB_USER, DB_PASSWORD, etc. if set)
# DATABASE_URL=postgresql://user:password@host:5432/dbname
