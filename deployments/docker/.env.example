# Educational Support AI System - Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# Server Configuration
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000

# =============================================================================
# CORS Configuration
# =============================================================================
# Comma-separated list of allowed origins, or * for all
CORS_ORIGINS=*

# =============================================================================
# Session Configuration
# =============================================================================
SESSION_EXPIRATION_SECONDS=3600

# =============================================================================
# Pagination Configuration
# =============================================================================
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# =============================================================================
# API Key Configuration
# =============================================================================
# Development mode: Allow all API keys (set to false in production)
ALLOW_ALL_API_KEYS=true

# Comma-separated list of valid API keys
VALID_API_KEYS=demo-key-123,test-key-456,dev-key-789

# =============================================================================
# Google API Configuration
# =============================================================================
# Required for Google Gemini API (used in agent_mesh)
# Get your API key from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your-google-api-key-here

# =============================================================================
# Database Configuration
# =============================================================================
# PostgreSQL connection URL
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://eduai:changeme@localhost:5432/eduai_db

# Database connection pool settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# =============================================================================
# Docker-specific Database Configuration
# =============================================================================
# These are used by docker-compose.yml to set up the PostgreSQL container
DB_USER=eduai
DB_PASSWORD=changeme
DB_NAME=eduai_db
DB_PORT=5432
