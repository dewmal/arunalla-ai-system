# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000

# CORS Configuration
# Use comma-separated values for multiple origins, or * for all origins
CORS_ORIGINS=*

# Session Configuration
SESSION_EXPIRATION_SECONDS=3600

# Pagination Configuration
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Development Settings
ALLOW_ALL_API_KEYS=true

# API Key Configuration
# Comma-separated list of valid API keys
# When ALLOW_ALL_API_KEYS=false, only these keys will be accepted
# Example: VALID_API_KEYS=abc123,def456,xyz789
VALID_API_KEYS=demo-key-123,test-key-456,dev-key-789

# PostgreSQL Database Configuration
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://eduai:changeme@localhost:5432/eduai_db

# Individual database settings (used by docker-compose)
DB_USER=eduai
DB_PASSWORD=changeme
DB_NAME=eduai_db
DB_PORT=5432

# Database Pool Settings (optional)
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
